@model IEnumerable<QLBH.Models.BaiHatLink>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row genres"> 
    <div class="col-lg-12 ">
        <div class="title-add">
            <h2>
                Danh sách Bài hát
            </h2>
            <a href="~/Admin/QL_BaiHat/ThemBaiHat"><button type="submit" class="btn btn-success">Thêm mới</button></a>
        </div>
        <div class="genre" style="overflow: scroll">
            <table id="dtDynamicVerticalScrollExample" class=" table table-hover table table-striped table-bordered table-sm" cellspacing="0">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>
                ID
            </th>
            <th>
                Tên bài hát
            </th>
            <th>
                Lời bài hát
            </th>
            <th>
                Lượt yêu thích
            </th>
            <th>
                Lượt nghe
            </th>
            <th>
                Thời lượng
            </th>
            <th>
                Ảnh bài hát
            </th>
            <th>
                Link nhạc
            </th>
            <th>
                Ảnh phát nhạc
            </th>
            <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var i = 0;
                    }
                    @foreach (var item in Model)
                    {
                        i++;
                        <tr>
                            <td>@i</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TENBAIHAT)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LOIBAIHAT)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LUOTYEUTHICH)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LUOTNGHE)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.THOILUONG)
                            </td>
                            <td class="link">
                                @Html.DisplayFor(modelItem => item.ANHBH)
                            </td>
                            <td class="link">
                                @Html.DisplayFor(modelItem => item.LINKBH)
                            </td>
                            <td class="link">
                                @Html.DisplayFor(modelItem => item.LINKANHPN)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new {  id=item.Id  }) |
                                @Html.ActionLink("ChiTietBaiHat", "ChiTietBaiHat", new { id=item.Id  }) |
                                @Html.ActionLink("Delete", "Delete", new { id=item.Id  })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>

